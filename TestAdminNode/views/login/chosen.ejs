	<style type="text/css">
		.block{
			width: 50%;
			background-color: rgba(255,255,255,0.7);
			height: 45%;
			position: absolute;
			top: 22.5%;
			left: 25%;
			border-radius: 10px;
			box-shadow: -5px -5px 50px rgba(0,136,255,0.5);
		}
		.block>div{
			width:30%;
			height:45%;
			background-color: rgba(44,155,251,0.8);
			border-radius: 10px;
			box-shadow:0px 0px 0px rgba(0,136,255,0);
			transition: box-shadow 3s;
			cursor: pointer;  
            transition: all 0.4s;  
            padding: 5% 0 0 0;
		}
		.block>div:hover{
			transform: scale(1.03);  
			box-shadow: 5px 5px 20px rgba(0,136,255,0.5);
		}
		.block div img{
			width: 3.9rem;
			height: 3.9rem;
		}
		.enter{
			margin-top: 2rem;
			width: 80px;
			height: 20px;
			border-radius: 20px;
			line-height: 20px;
			color: rgb(44,155,251);
			background-color: white;
			font-size: 0.6rem;
		}
		.blockleft{
			position: absolute;
			left: 12%;
			top: 20%;
		}
		.blockright{
			position: absolute;
			right: 12%;
			top: 20%;
		}
