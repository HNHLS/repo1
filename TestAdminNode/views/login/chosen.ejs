	<script type="text/javascript">
		$(".blockright").click(function(){
			$.ajax({
				type:"get",
				url:"/login/bindDepartment",
				data:{
					department:"理化"
				},
				success:function(res){
					if(res.status=="ok"){
						window.location.href="/home?chosen=理化"
					}
				}
			});
		})
		$(".blockleft").click(function(){
			$.ajax({
				type:"get",
				url:"/login/bindDepartment",
				data:{
					department:"可靠性"
				},
				success:function(res){
					console.log(res)
					if(res.status=="ok"){
						window.location.href="/home?chosen=可靠性"
					}
				}
			});
		})
	</script>
